@model IEnumerable<VerifyWebApp.Models.BLocation>

@{
    ViewBag.Title = "Blocation_Index";
}

<div id="page-wrapper" class="container-fluid rounded page border shadow text-center">
    <div class="row border-bottom">
        <div class="col-lg-12">
            <div class="row title">
                <strong> <h4>B location List</h4></strong>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="pageconent">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-2">
                <button type="button" id="btnnew" value="New Practice" class="btn btn-sm btn-secondary pull-right m-1 order-3"
                        onclick="downloadexcel();">
                    <i class="fa fa-download"></i> Download Excel
                </button>
            </div>
            <div class="col-2">
                <button type="button" id="btnnew" value="New Practice" class="btn btn-sm btn-success pull-right m-1 order-4"
                        onclick="importexcel();">
                    <i class="fa fa-upload"></i>  Import Excel
                </button>
            </div>
            <div class="col-2">
                <button type="button" id="btnnew" value="New Practice" class="btn btn-sm btn-secondary pull-right m-1 order-2"
                        onclick="exportexcel();">
                    <i class="fa fa-file-excel-o"></i>   Export Excel
                </button>
            </div>
        </div>
        <div class="row" style="padding-top:3px">
            <div class="col-lg-12">
                <table class="table table-bordered table-striped table-hover" id="tblbgroup">
                    <thead>
                        <tr>
                            <td align="left">
                                ALocation No
                            </td>

                            <td align="left">
                                BLocation No
                            </td>
                            <td align="left">
                                BLocation Name
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="3">No Rows Found</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td align="left">@Html.DisplayFor(modelitem => item.ALocID)</td>

                                    <td align="left">@Html.DisplayFor(modelitem => item.ID)</td>
                                    <td align="left">@Html.DisplayFor(modelitem => item.BLocationName)</td>
                                </tr>


                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    <div class="modal fade" tabindex="-1" role="dialog" id="divNew">
        <div class="modal-dialog modal-lg" role="document" id="divNewContent">

        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {

        $('#tblblocation').DataTable();
    });


    if (typeof jQuery !== 'undefined') {
        console.log('jQuery Loaded');
    }
    else {
        console.log('not loaded yet');
    }

    function importexcel() {

        var url = '@Url.Action("importblocation", "ExportLocations")';
            $.get(url, function (data) {
                $("#divNewContent").html(data);
                // alert(data);
                $('#divNew').modal('show')
            });
        }
        function exportexcel()
        {
            var url = '@Url.Action("exportblocation", "ExportLocations")';
            window.location.href = url;
        }

    function downloadexcel()
        {
            var url = '@Url.Action("downloadblocation", "ExportLocations")';
            window.location.href = url;
        }



    </script>

