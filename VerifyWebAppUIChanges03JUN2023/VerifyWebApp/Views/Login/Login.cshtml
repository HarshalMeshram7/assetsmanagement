@model VerifyWebApp.Models.Login
@{
    Layout = "~/Views/Shared/Layout_login.cshtml";
}
<div  style="opacity: 0.8; background-color:#673838; position: fixed; width:100rem; height:100rem; top: 0px; left: 0px; z-index: 1000;align-items:center">
    <!--<div class="container rounded page loginpage">
        <div class="row">-->
           @*<div class="col-md-12">*@
            @*<div class="row justify-content-md-center title" sty>*@
            <!--<strong> <h4>Verify - Fixed Assets on Track</h4></strong>
        </div>-->
    <div class="card-holder col-10" >
        <div class="card justify-content-between" style=" background: white; border-radius: 8px; box-shadow: 1px 2px 8px rgba(0, 0, 0, 0.65); height: 500px; margin: 6rem auto 8.1rem auto; width: 329px;align-content:center">
            <div class="card-content" style="height:fit-content ">
                <div class="card-title" style="letter-spacing: 4px;padding-bottom: 23px;padding-top: 13px;text-align: center;color:black">
                    <b> Welcome, please sign in!</b>
                    <br />
                    <div align="center">
                        <img src="~/Images/TurboLogo.jpeg" alt="Verify logo" width="100" height="100" style="padding-top:20px"> Turbotrack
                    </div>

                </div>
                <div class="card-body" style="padding-top:15px">


                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "UserLoginForm", @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        <div class="form-group" style="align-items:start; display: flex; flex-direction: column;">
                            <label for="exampleInputEmail1" style="padding-top:13px;color:black">User Name</label>
                            <input type="text" name="username" class="form-control" placeholder="Email" required style="background: #fbfbfb; border: none; outline: none; padding-top: 14px;">
                            <div class="form-border" style="background: -webkit-linear-gradient(right,#5e2f2f,#c17a7a); height: 1px; width: 100%; "></div>
                            <div class="invalid-feedback">Enter Your Username</div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" style="padding-top: 22px; color: black">Password</label>
                            <input type="password" name="password" class="form-control" placeholder="Password" required style="background: #fbfbfb; border: none; outline: none; padding-top: 14px;">
                            <div class="form-border" style="background: -webkit-linear-gradient(right,#5e2f2f,#c17a7a); height: 1px; width: 100%; "></div>
                            <div class="invalid-feedback">Enter Your Password</div>
                        </div>
                        <div class="text-danger error">
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                        <button type="submit" class="btn btn-primary" style="align-self: center; background: -webkit-linear-gradient(right, #5e2f2f,#c17a7a); border: none; border-radius: 21px; box-shadow: 0px 1px 8px #c17a7a; cursor: pointer; color: white; height: 42.3px; margin: 0 auto; margin-top: 50px; transition: 0.25s; width: 153px; ">Submit</button>
                    }
                    <br />
                    @*<h4>@Html.ValidationMessageFor(m => m.IsAppAccess)</h4>*@
                    <h4 style="color: white;">@Html.ValidationMessageFor(m => m.IsAppAccess)</h4>

                </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


