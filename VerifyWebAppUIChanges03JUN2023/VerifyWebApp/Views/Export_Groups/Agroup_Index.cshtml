@model IEnumerable<VerifyWebApp.Models.AGroup>

@{
    ViewBag.Title = "Agroup_Index";
}

<div class="container-fluid rounded page border shadow">
    
        <div class="row border-bottom">
            <div class="col-lg-12">
                <div class="row title">
                    <strong> <h4>A Group List</h4></strong>
                </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="pageconent">
            <div class="row " style="padding-top:3px">
                <div class="col-md-12 my-1 ">
                    <div class="pull-right">

                        <button type="button" id="btnnew" value="New Practice" class="btn btn-sm btn-secondary pull-right m-1 order-1"
                                onclick="downloadexcel();">
                            <i class="fa fa-download"></i> Download Excel
                        </button>

                        <button type="button" id="btnnew" value="New Practice" class="btn btn-sm btn-success pull-right m-1 order-3"
                                onclick="importexcel();">
                            <i class="fa fa-upload"></i>  Import Excel
                        </button>

                        <button type="button" id="btnnew" value="New Practice" class="btn btn-sm btn-secondary pull-right m-1 order-1"
                                onclick="exportexcel();">
                            <i class="fa fa-file-excel-o"></i>   Export Excel
                        </button>


                    </div>
                </div>
            </div>
            <div class="row my-2 ">
                <div class="col-lg-12">
                    <table class="table table-bordered table-striped table-hover" id="tblagroup">
                        <thead>
                            <tr>
                                <td>
                                    AGroup No
                                </td>

                                <td align="left">
                                    AGroup Name
                                </td>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="2">No Rows Found</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelitem => item.ID)</td>

                                        <td align="left">@Html.DisplayFor(modelitem => item.AGroupName)</td>

                                    </tr>


                                }
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" id="divNew">
        <div class="modal-dialog modal-lg" role="document" id="divNewContent">

        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {

        $('#tblagroup').DataTable();
    });


    if (typeof jQuery !== 'undefined') {
        console.log('jQuery Loaded');
    }
    else {
        console.log('not loaded yet');
    }

    function importexcel() {

        var url = '@Url.Action("importagroup","Export_Groups")';
            $.get(url, function (data) {
                $("#divNewContent").html(data);
                // alert(data);
                $('#divNew').modal('show')
            });
        }
        function exportexcel()
        {
            var url = '@Url.Action("exportagroup","Export_Groups")';
            window.location.href = url;
        }

    function downloadexcel()
        {
            var url = '@Url.Action("downloadagroup","Export_Groups")';
            window.location.href = url;
        }



    </script>

