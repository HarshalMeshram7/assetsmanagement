@model IEnumerable<VerifyWebApp.Models.CGroup>

@{
    ViewBag.Title = "Cgroup_Index";
}

<div id="page-wrapper" class="container-fluid rounded page border shadow text-center">
    <div class="row border-bottom">
        <div class="col-lg-12">
            <div class="row title">
                <strong> <h4>C Group List</h4></strong>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="pageconent">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-12 my-1 ">
                <div class="pull-right">

                    <button type="button" id="btnnew" value="New Practice" class="btn btn-sm btn-secondary pull-right m-1 order-3"
                            onclick="downloadexcel();">
                        <i class="fa fa-download"></i> Download Excel
                    </button>
                    <button type="button" id="btnnew" value="New Practice" class="btn btn-sm btn-success pull-right m-1 order-4"
                            onclick="importexcel();">
                        <i class="fa fa-upload"></i>  Import Excel
                    </button>
                    <button type="button" id="btnnew" value="New Practice" class="btn btn-sm btn-secondary pull-right m-1 order-2"
                            onclick="exportexcel();">
                        <i class="fa fa-file-excel-o"></i>   Export Excel
                    </button>
                </div>
                </div>
            </div>
                <div class="row" style="padding-top:3px">
                    <div class="col-lg-12">
                        <table class="table table-bordered table-striped table-hover" id="tblcgroup">
                            <thead>
                                <tr>
                                    <td align="left">
                                        AGroup No
                                    </td>

                                    <td align="left">
                                        BGroup No
                                    </td>
                                    <td align="left">
                                        CGroup No
                                    </td>
                                    <td align="left">
                                        CGroup Name
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() == 0)
                                {
                                    <tr>
                                        <td colspan="4">No Rows Found</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td align="left">@Html.DisplayFor(modelitem => item.AGrpID)</td>

                                            <td align="left">@Html.DisplayFor(modelitem => item.BGrpID)</td>
                                            <td align="left">@Html.DisplayFor(modelitem => item.ID)</td>
                                            <td align="left">@Html.DisplayFor(modelitem => item.CGroupName)</td>
                                        </tr>


                                    }
                                }
                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>

<div class="modal fade" tabindex="-1" role="dialog" id="divNew">
    <div class="modal-dialog modal-lg" role="document" id="divNewContent">

    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('#tblcgroup').DataTable();
    });


    if (typeof jQuery !== 'undefined') {
        console.log('jQuery Loaded');
    }
    else {
        console.log('not loaded yet');
    }

    function importexcel() {

        var url = '@Url.Action("importcgroup","Export_Groups")';
            $.get(url, function (data) {
                $("#divNewContent").html(data);
                // alert(data);
                $('#divNew').modal('show')
            });
        }
        function exportexcel()
        {
            var url = '@Url.Action("exportcgroup","Export_Groups")';
            window.location.href = url;
        }

    function downloadexcel()
        {
            var url = '@Url.Action("downloadcgroup","Export_Groups")';
            window.location.href = url;
        }



</script>

