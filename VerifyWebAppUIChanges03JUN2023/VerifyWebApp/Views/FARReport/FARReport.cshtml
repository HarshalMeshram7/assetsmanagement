                                    @Html.DropDownList("Fromdate", (SelectList)ViewBag.Fromdate, "Select From date", new { @class = "form-control form-control-sm", id = "Fromdate", @required = true })
                                    <div style="color:#CC0000;font-weight:400" id="locaerror"></div>
                                </div>

                                <div class="form-group col-md-3">
                                    <label for="praticesname" class="form-control-sm">To Date <span style="color:#CC0000;">*</span></label>
                                    @Html.DropDownList("Todate", (SelectList)ViewBag.Todate, "Select To date", new { @class = "form-control form-control-sm", id = "Todate", @required = true })
                                    <div style="color:#CC0000;font-weight:400" id="locaerror"></div>
                                </div>
                            </div>
                            <div><label style="font-size:10px;color:red "><span>*</span> Mandatory Fields</label></div>
                            <div class="modal-footer">

                                <button type="submit" class="btn saveBtn btn-sm" id="btngetreport">Show Report</button>
                            </div>

                        </div>

                    }
                </div>

            </div>
        </div>
    </div>
</div>




