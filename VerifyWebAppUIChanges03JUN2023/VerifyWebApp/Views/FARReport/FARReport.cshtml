<div id="progressbar" class="modal fade" role="dialog" style="height: auto;" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lx">

        <!-- Modal content-->
        <div class="modal-content" style="height:auto;width:auto;overflow:auto">
            <div class="modal-header">
                <label style="color:red;text-align: center;">Please wait........</label>

            </div>
            <div class="modal-body ">

                <div class="row col-6" style="overflow:auto;align-content:center">
                    <label style="color:darkred;text-align: center;"> Report is in progress........</label>

                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">


    $(document).ready(function () {                                          //......changes 1 $
        $('#progressbar').modal('hide');
        //voucherdate set to all other date

        $('#dtfromDate').datetimepicker({
            format: 'DD/MM/YYYY',
            icons:
            {
                next: 'fa fa-angle-right',
                previous: 'fa fa-angle-left'
            },

        });
        $('#dttoDate').datetimepicker({
            format: 'DD/MM/YYYY',
            icons:
            {
                next: 'fa fa-angle-right',
                previous: 'fa fa-angle-left'
            },
        })
        $("#frmNewEmp").submit(function (e) {
            var fromdate = $("#Fromdate").val();
            var todate = $("#Todate").val();
            getreport(fromdate, todate);
            e.preventDefault();
            return false;

        });

        $("#btnShowReport").click(function (e) {
            showFARReportScreen();
        });


    });
    if (typeof jQuery !== 'undefined') {
        console.log('jQuery Loaded');
    }
    else {
        console.log('not loaded yet');
    }

    function getreport(fromdate, todate) {


        fromdate = moment(fromdate, 'DD/MM/YYYY').format('YYYY-MM-DD');
        todate = moment(todate, 'DD/MM/YYYY').format('YYYY-MM-DD');
          var data = {
              'fromdate': fromdate,
              'todate': todate


        };
          var form = $('#frmNewEmp');
          var token = $('input[name="__RequestVerificationToken"]', form).val();
          var headers = {};
          headers['__RequestVerificationToken'] = token;
            $('#progressbar').modal('show');
         var ControllerURL = '@Url.Action("GetFAReport_New", "FARReport")';
        var DownloadURL = '@Url.Action("Download", "FARReport")';

            $.ajax({
                type: 'POST',
                url: ControllerURL,
                contentType: "application/json",
                headers: headers,
                data: JSON.stringify(data),


                success: function (data) {
                    var fileurl = DownloadURL + '?fileGuid=' + data.FileGuid
                        + '&filename=' + data.FileName;
                    $('#progressbar').modal('hide');
                    //alert(fileurl);

                    window.location = fileurl;
                    $('#progressbar').modal('hide');
                },
                failure: function () { alert("Error"); }
            });


    }

    function showFARReportScreen() {
        console.log('loaddepriciation');

        var _fromdate = $("#Fromdate").val();
        var _todate = $("#Todate").val();

        let fromdate = moment(_fromdate, 'DD/MM/YYYY').format('YYYY-MM-DD');
        let todate = moment(_todate, 'DD/MM/YYYY').format('YYYY-MM-DD');
        var data = {
            'fromdate': fromdate,
            'todate': todate


        };

        //$('#tbldepreciation').DataTable();

        var ControllerURL = '@Url.Action("GetFARReport_NewGrid", "FARREport")';

        console.log(ControllerURL);

        var table = $('#tblreport')
            .on('processing.dt', function (e, settings, processing) {
                $('#divspinner').css('display', processing ? 'block' : 'none');
            }).DataTable({
                "destroy": true,
                scrollY: '600px',
                scrollX: true,
                scrollCollapse: true,
                colReorder: true,
                paging: false,
                fixedColumns: {
                    left: 1
                },


             "serverSide": true,
             "ajax": {
             url: ControllerURL,
             type: 'POST',
             dataType: 'json',
             "data": function (d) {
                 d.FromDate = fromdate,
                     d.ToDate = todate

             }
         },
        "columns": [
             { "data": "AGroupName", "autoWidth": true },
             { "data": "BGroupName", "autoWidth": true },
             { "data": "CGroupName", "autoWidth": true },
             { "data": "DGroupName", "autoWidth": true },
             { "data": "AssetNo", "autoWidth": true },
             { "data": "AssetIdentificationNo", "autoWidth": true },
             { "data": "AssetName", "autoWidth": true },
             { "data": "str_voucherdate", "autoWidth": true },
             { "data": "OpGross", "autoWidth": true },
             { "data": "Addition", "autoWidth": true },
             { "data": "Disposal", "autoWidth": true },
             { "data": "ClGross", "autoWidth": true },
             { "data": "OpDep", "autoWidth": true },
             { "data": "UpToDep", "autoWidth": true },
             { "data": "DispoDep", "autoWidth": true },
             { "data": "TotDep", "autoWidth": true },
             { "data": "NetBalance", "autoWidth": true },

         ],
           'columnDefs': [

            {
                "targets": 5,
                "className": "text-right",
            },
            {
                "targets": 6,
                "className": "text-right",
            }],
            });

        $('a.toggle-vis').on('click', function (e) {
            e.preventDefault();

            // Get the column API object
            var column = table.column($(this).attr('data-column'));

            // Toggle the visibility
            column.visible(!column.visible());
        });

    }

</script>
