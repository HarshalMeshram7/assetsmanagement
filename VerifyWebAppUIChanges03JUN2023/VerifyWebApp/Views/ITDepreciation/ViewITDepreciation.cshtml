@model IEnumerable<VerifyWebApp.Models.ITDepreciation>

@{
    ViewBag.Title = "ViewITDepreciation";
}

<div id="page-wrapper" class="container-fluid rounded page border shadow text-center">
    <div class="row border-bottom">
        <div class="col-lg-12">
            <div class="row title">
                <strong> <h4>Depreciation IT law &nbsp;&nbsp;</h4></strong>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="pageconent">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-6">
                <button type="button" id="btnnew" value="New Practice"
                            class="btn btn-sm btn-primary pull-right"
                            onclick="Export();">
                    <i class="fa fa-file-excel-o"></i> Export
                    </button>
            </div>
        </div>
        <div class="row" style="padding-top:3px">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover" id="tblitdepreciation">
                        <thead>
                            <tr>
                                <td>
                                    Group Name
                                </td>
                                <td>
                                    Dep Rate
                                </td>

                                <td >
                                    Op WDV
                                </td>
                                <td>Addition during year used for >=180 Days</td>
                                <td>Addition during year used for < 180 Days</td>
                                <td>
                                    Disposal
                                </td>
                                <td>
                                    Total
                                </td>

                                <td>
                                  Dep > 180
                                </td>

                                <td>
                                    Dep < 180 
                                </td>
                                <td>
                                    Total Dep Amt
                                </td>
                                <td>
                                    WDV at End
                                </td>
                               
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="13">No Rows Found</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelitem => item.GroupName)</td>

                                        <td>@Html.DisplayFor(modelitem => item.DepreciationRate)</td>

                                        <td>@Html.DisplayFor(modelitem => item.Opwdv)</td>

                                        <td>@Html.DisplayFor(modelitem => item.Additionbefore)</td>
                                        <td>@Html.DisplayFor(modelitem => item.AdditionAfter)</td>

                                        <td>@Html.DisplayFor(modelitem => item.Disposal)</td>

                                        <td>@Html.DisplayFor(modelitem => item.Total)</td>
                                        <td>@Html.DisplayFor(modelitem => item.AdditionDephalf)</td>
                                        <td>@Html.DisplayFor(modelitem => item.AdditionDepfull)</td>
                                        <td>@Html.DisplayFor(modelitem => item.TotalDep)</td>
                                        <td>@Html.DisplayFor(modelitem => item.ClosingWDV)</td>
                                    </tr>


                                }
                            }
                        </tbody>
                    </table>
                </div>
             
            </div>
        </div>
    </div>
</div>
   
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
          
            $('#tblitdepreciation').DataTable();
        });

     
    if (typeof jQuery !== 'undefined') {
        console.log('jQuery Loaded');
    }
    else {
        console.log('not loaded yet');
    }



        function Export() {
            var id = '@ViewBag.itperiodid';
             var url = '@Url.Action("ITDepreciationExport", "ITDepreciation")';
            url = url + "/" + id;

            window.location.href = url;
        }

    </script>

