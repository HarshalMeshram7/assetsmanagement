    function showerrorlist(result)
    {
        var srno = 1;

        for (var i = 0; i < result.length; i++) {

            $('#errtbl').last().append('<tr><td>' + srno + '</td><td>' + result[i] + '</td></tr>');
            srno++
        }

        $('#errorlist').modal('show');

    }
    function closeerrorlist() {
        $('#errorlist').modal('hide');
    }

