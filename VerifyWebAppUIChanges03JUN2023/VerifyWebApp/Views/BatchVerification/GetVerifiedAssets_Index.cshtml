@{
    ViewBag.Title = "Verified Assets_Index";
}

<div class="container-fluid py-4">
    <div class="row my-1">
        <div class="col-12">
            <div class="card">

                <div class="card-header pb-0">
                    <div class="row">
                        <div class="d-sm-flex justify-content-between" style="border-bottom:groove">
                            <div class="text-2xl"><b>Verified Assets Report </b></div>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    @using (@Html.BeginForm("GetVerifiedAssets", "BatchVerification", FormMethod.Post, new { id = "frmNewEmp", name = "frmNewEmp" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label for="praticesname" class="form-control-sm">Select Batch<span style="color:#CC0000;">*</span></label>
                                    @Html.DropDownList("BatchName", (SelectList)ViewBag.BatchName, "Select Batch", new { @class = "form-control form-control-sm", id = "BatchId", @required = true })
                                    <div style="color:#CC0000;font-weight:400" id="locaerror"></div>
                                </div>
                            </div>
                            <div><label style="font-size:12px;color:red "><span>*</span> Mandatory Fields</label></div>
                        </div>
                        <div class="modal-footer">
                            @*<button type="button" class="btn saveBtn btn-sm" id="btngetreport">Show Report</button>*@
                            <button type="button" class="btn btn-sm saveBtn" style="margin-right:5px" id="btngetreport">Export Excel</button>
                            <button type="button" class="btn btn-sm saveBtn" id="btnGetPdfReport">Export PDF</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div id="progressbar" class="modal fade" role="dialog" style="height: auto;" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lx">
        <!-- Modal content-->
        <div class="modal-content" style="height:auto;width:auto;overflow:auto">
            <div class="modal-header">
                <label style="color:red;text-align: center;">Please wait........</label>
            </div>
            <div class="modal-body ">
                <div class="row col-6" style="overflow:auto;align-content:center">
                    <label style="color:darkred;text-align: center;"> Report is in progress........</label>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#progressbar').modal('hide');

        $("#btngetreport").on("click", function (e) {
            e.preventDefault();
            var BatchId = $("#BatchId").val();
            getreport(BatchId);
        });
        $("#btnGetPdfReport").on("click", function (e) {
            e.preventDefault();
            var BatchId = $("#BatchId").val();
            GetPdfReport(BatchId);
        });
    });

    function getreport(BatchId) {
        var url = '@Url.Action("GetVerifiedAssets", "BatchVerification")';
        var downloadUrl = '@Url.Action("Download", "BatchVerification")';

        var data = {
            BatchId: BatchId
        };

        var form = $('#frmNewEmp');
        var token = $('input[name="__RequestVerificationToken"]', form).val();
        var headers = {};
        headers['__RequestVerificationToken'] = token;

        /*$('#progressbar').modal('show');*/

        $.ajax({
            type: 'POST',
            url: url,
            headers: headers,
            contentType: "application/json",
            data: JSON.stringify(data),
            success: function (data) {
                var fileurl = downloadUrl + '?fileGuid=' + data.FileGuid + '&filename=' + data.FileName;
                $('#progressbar').modal('hide');
                window.location.href = fileurl;
            },
            error: function () {
                $('#progressbar').modal('hide');
                alert("Error");
            }
        });
    }

    function GetPdfReport(BatchId) {
        var url = '@Url.Action("GetVerifiedAssets", "BatchVerification")';
        var url = '@Url.Action("GetPdfReport", "BatchVerification")';
        var downloadUrl = '@Url.Action("Download", "BatchVerification")';

        var data = {
            BatchId: BatchId
        };

        var form = $('#frmNewEmp');
        var token = $('input[name="__RequestVerificationToken"]', form).val();
        var headers = {};
        headers['__RequestVerificationToken'] = token;

        /*$('#progressbar').modal('show');*/

        $.ajax({
            type: 'POST',
            url: url,
            headers: headers,
            contentType: "application/json",
            data: JSON.stringify(data),
            success: function (data) {
                var fileurl = downloadUrl + '?fileGuid=' + data.FileGuid + '&filename=' + data.FileName;
                $('#progressbar').modal('hide');
                window.location.href = fileurl;
            },
            error: function () {
                $('#progressbar').modal('hide');
                alert("Error");
            }
        });
    }
</script>
