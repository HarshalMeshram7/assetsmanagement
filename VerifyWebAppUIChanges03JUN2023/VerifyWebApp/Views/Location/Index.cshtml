                                <tr>

                                    <td width="5%">
                                        Asset No
                                    </td>
                                    <td width="5%">
                                        Identification No
                                    </td>
                                    <td width="25%">
                                        Asset Name
                                    </td>
                                    <td width="5%">
                                        Voucher Date
                                    </td>
                                    <td class="text-end" width="15%">
                                        Amount Capitalised
                                    </td>


                                </tr>
                            </thead>
                            <tbody style="font-weight: bold; color: black">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
    <!-- Modal -->


